<UserControl x:Class="InventoryManager.Views.AddItemTypeViewModal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InventoryManager.Views" xmlns:components="clr-namespace:InventoryManager.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <components:TextSubmissionModalComponent 
            Prompt="Enter the new Item Type you would like to add"
            Text="{Binding NewItemType, UpdateSourceTrigger=PropertyChanged}">
            <components:TextSubmissionModalComponent.Background>
                <SolidColorBrush Color="Gray" Opacity="0.5" />
            </components:TextSubmissionModalComponent.Background>
        </components:TextSubmissionModalComponent>
    </Grid>
</UserControl>
